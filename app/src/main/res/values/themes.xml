<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Formula1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.Formula1">
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="NavigationDrawer" parent="Theme.Formula1">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorControlHighlight">?attr/colorSecondary</item>
    </style>

    <style name="SearchBar" parent="Theme.Formula1">
        <item name="mt_backIconTint">?attr/colorSecondaryVariant</item>
        <item name="mt_clearIconTint">?attr/colorSecondaryVariant</item>
        <item name="mt_menuIconTint">?attr/colorSecondaryVariant</item>
        <item name="mt_navIconTint">?attr/colorSecondaryVariant</item>
        <item name="mt_placeholderColor">?attr/colorSecondaryVariant</item>
        <item name="mt_searchBarColor">@android:color/white</item>
        <item name="mt_searchIconTint">?attr/colorSecondaryVariant</item>
        <item name="mt_textColor">?attr/colorSecondaryVariant</item>
        <item name="mt_textCursorTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Spinner" parent="Theme.Formula1">
        <item name="ms_arrow_tint">?attr/colorSecondaryVariant</item>
        <item name="ms_text_color">?attr/colorSecondaryVariant</item>
        <item name="ms_background_color">@android:color/white</item>
    </style>
</resources>