<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriversFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/driver_linear_height"
        android:orientation="horizontal">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/driverSearchBar"
            style="@style/SearchBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:mt_maxSuggestionsCount="5"
            app:mt_placeholder="@string/driver_search_placeholder"
            app:mt_roundedSearchBarEnabled="true" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/driverSpinner"
            style="@style/Spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDrivers"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>