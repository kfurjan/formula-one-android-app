<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_card_margin"
    app:cardCornerRadius="@dimen/material_card_corner_radius"
    app:cardElevation="@dimen/material_card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_linear_height"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/card_iv_height"
            android:layout_height="match_parent"
            android:background="?attr/colorSecondaryVariant"
            android:contentDescription="@string/circuit_desc"
            android:padding="@dimen/card_iv_padding"
            android:src="@drawable/race_track" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/card_content_padding_start"
            android:paddingTop="@dimen/card_content_padding_top"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tvCircuitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                tools:text="Nurburging Nordschleife" />

            <TextView
                android:id="@+id/tvCircuitInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="Germany" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>