<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardUseCompatPadding="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/driverGridLayoutHeight"
        android:columnCount="1"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/driverLinearLayoutHeight"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/tvDriverFullName"
                android:layout_width="0dp"
                android:layout_height="@dimen/driverTvHeight"
                android:layout_marginStart="@dimen/driverTvMarginStart"
                android:layout_marginTop="@dimen/driverTvMarginTop"
                android:layout_weight="3"
                android:textStyle="bold"
                tools:text="Michael Schumacher" />

            <TextView
                android:id="@+id/tvDriverCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/driverTvHeight"
                android:layout_marginStart="@dimen/driverTvMarginStart"
                android:layout_marginTop="@dimen/driverTvMarginTop"
                android:layout_weight="5"
                android:textStyle="bold"
                tools:text="(MSC)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/driverLinearLayoutHeight"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <TextView
                android:id="@+id/tvDriverNationality"
                android:layout_width="0dp"
                android:layout_height="@dimen/driverTvHeight"
                android:layout_marginStart="@dimen/driverTvMarginStart"
                android:layout_marginTop="@dimen/driverTvMarginTop"
                android:layout_weight="1"
                tools:text="German" />

            <TextView
                android:id="@+id/tvDriverBirthDate"
                android:layout_width="0dp"
                android:layout_height="@dimen/driverTvHeight"
                android:layout_marginStart="@dimen/driverTvMarginStart"
                android:layout_marginTop="@dimen/driverTvMarginTop"
                android:layout_weight="5"
                tools:text="01-03-1969" />
        </LinearLayout>
    </GridLayout>
</androidx.cardview.widget.CardView>