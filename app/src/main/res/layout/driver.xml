<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/driverMaterialMargin"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/driverCardElevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/driverLinearHeight"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/driverIvWidth"
            android:layout_height="match_parent"
            android:background="?attr/colorSecondaryVariant"
            android:contentDescription="@string/helmet_desc"
            android:padding="@dimen/driverIvPadding"
            android:src="@drawable/helmet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/driverContentPaddingStart"
            android:paddingTop="@dimen/driverContentPaddingTop"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tvDriverInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                tools:text="Michael Schumacher (MSC)" />

            <TextView
                android:id="@+id/tvDriverNationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="German" />

            <TextView
                android:id="@+id/tvDriverBirthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="11-06-1998" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>