<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navHeader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:clickable="true"
    android:focusable="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_padding"
    tools:ignore="UseCompoundDrawables"
    android:background="?android:attr/listDivider"
    android:theme="@style/NavigationDrawer">

    <ImageView
        android:id="@+id/ivNavHeader"
        android:layout_width="@dimen/nav_header_icon_size"
        android:layout_height="@dimen/nav_header_icon_size"
        android:src="@drawable/navigation_header_icon"
        android:contentDescription="@string/navigation_header_icon_desc" />

    <TextView
        android:id="@+id/tvNavHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_tv_padding_top"
        android:text="@string/formula_1"
        android:textStyle="bold"/>

</LinearLayout>